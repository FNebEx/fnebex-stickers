---
layout: default.liquid
cssPath: "./css/main.css"
---

      {% comment %} {{ sticker.fields.Image[0].url }} {% endcomment %}

<h1>fnebex stickers</h1>
<div class="row">
    {% for sticker in stickers %}
    <div class="col-lg-3">
      <div class="sticker-wrapper">
        <div class="sticker-body">
          <img class="img-fluid" src="{{ sticker.fields.Image[0].url }}" alt="">
          <h5>{{ sticker.fields.Name }}</h5>
          <h5>{{ sticker.fields.Price | append: "0" | | prepend: '$'}}</h5>
          <h5>{{ sticker.id}}</h5>
          <button class="btn snipcart-add-item"
            data-item-id="{{ sticker.id }}"
            data-item-name="{{ sticker.fields.Name }}"
            data-item-price="{{ sticker.fields.Price | append: '0' }}"
            data-item-url="/"
            data-item-image="{{ sticker.fields.Image[0].url }}"
          >Buy
          </button>
        </div>
      </div>
    </div>
    {% endfor %}
</div>